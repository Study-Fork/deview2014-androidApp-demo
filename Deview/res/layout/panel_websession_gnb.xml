<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal" android:background="#359CFB" android:gravity="center_vertical" >

    <Button
        android:id="@+id/addMySchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/gnbTextStyle"
        android:layout_weight="1"
        android:text="+프로그램" />

    <Button
        android:id="@+id/videoMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/gnbTextStyle"
        android:text="동영상메모" />    
    <Button
        android:id="@+id/textMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
          style="@style/gnbTextStyle"
        android:text="텍스트메모" />
    <Button
        android:id="@+id/viewMemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/gnbTextStyle"
        android:text="메모보기" /> 

</LinearLayout>
